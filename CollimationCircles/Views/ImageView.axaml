<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:CollimationCircles.ViewModels"
        x:DataType="vm:ImageViewModel"
        mc:Ignorable="d"
        d:DesignWidth="640" 
        d:DesignHeight="480"
        x:Class="CollimationCircles.Views.ImageView"
        Width="640"
        Height="480"
        Title="{Binding Title}">
  <Grid 
    Margin="16"
    RowDefinitions="*,Auto">
    <Image Source="{Binding ImageToDisplay}" />
    <TextBlock
      Grid.Row="2"
      Padding="0 16 0 0"
      Text="{Binding ImageDescription}" />
  </Grid>
</Window>